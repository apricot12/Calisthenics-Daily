
<div class='container-fluid height1 new-article'>
    <div class='col-8 mx-auto  p-5 mx-3'>
    <div class= 'text-dark'>
        <%= render "devise/shared/error_messages", resource: @article %>
    </div>

    <%= form_with model: @article do |f| %>
        <%= f.label :category, class:'m-2 text-dark ' %>
        <div class='opacity1'>
        <%= collection_select(:article, :category_id ,Category.all, :id, :name)%>  
        </div>
        <div class=' my-3'>
        <%= f.label :title, class:'m-2 text-dark' %>
        <%= f.text_field :title, class: 'form-control opacity1' %>
        </div>

        <div class=' my-3'>
        <%= f.label :text, class:'m-2 text-dark' %>
        <%= f.text_area :text, class: 'form-control opacity1' %>
        </div>
        <div class=' my-3'>
        <div class=''>
        <%= f.label :image, class:'m-2 text-dark' %>
        <%= f.file_field :image, class: "form-control" %>
        </div>
        </div>
        <div class=' my-3'>
        <%= f.submit :create, class: 'my-2 opacity1' %>
        </div>
    <% end %>
    <%= link_to 'Back', root_path, class:'btn btn-light opacity1' %>
    </div>
</div>